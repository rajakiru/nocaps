{
  "expo": {
    "name": "nocaps",
    "slug": "nocaps",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0D0D0D"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.nocaps.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0D0D0D"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.nocaps.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "nocaps needs camera access to broadcast"
        }
      ],
      [
        "@config-plugins/react-native-webrtc",
        {
          "cameraPermission": "nocaps needs camera access to broadcast live video",
          "microphonePermission": "nocaps needs microphone access for live audio"
        }
      ]
    ]
  }
}
